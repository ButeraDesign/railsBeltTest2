<div class = "container">
<div class = "row">

<div class="col-md-9">
    <h2>Name: <%= @lender.first_name %> <%= @lender.last_name %></h2>
    <h2>Account Balence: <%= @lender.money %> </h2>
</div>
</div>

<div class = "row">
<h3> List of people who need help </h3>
<div class="col-md-9">
<table class="table well">
  <tr>
    <th>Name</th>
    <th>Money Needed For </th>
    <th>Description</th>
    <th>Amount Needed</th>
    <th>Amount Raised</th>
    <th>Action</th>
  </tr>
<% @allBorrowers.each do |borrower| %>
  <tr>
    <td><%= borrower.first_name %> <%= borrower.last_name %></td>
    <td><%= borrower.purpose %></td>
    <td><%= borrower.description %></td>
    <td><%= borrower.money %></td>
    <td><%= borrower.raised %></td>
    <td>
      <form action = "/histories" method = "post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="historie[borrower_id]" value = "<%= borrower.id %>">
        <input type='number' name='historie[amount]' value='0.00'/><br>
        <input type="submit" name="Lend" value = "Lend">
      </form>

    </td>
  </tr>
<% end %>
</table>
</div>
</div>


<div class = "row">
<h3> List of people who lent you lent money to</h3>
<div class="col-md-9">
<table class="table well">
  <tr>
    <th>Name</th>
    <th>Money Needed <footer></footer> </th>
    <th>Description</th>
    <th>Amount Needed </th>
    <th>Amount Raised </th>
    <th>Amount Lent </th>
  </tr>
<% @allLenders.each do |lender| %>
  <tr>
    <td>Money Needed </td>
    <td>Description</td>
    <td>Amount Needed </td>
    <td>Amount Raised </td>
    <td>Amount Lent </td>
  </tr>
<% end %>
</table>
</div>
</div>




</div>
